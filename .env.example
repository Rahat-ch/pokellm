# ===========================================
# PokeLLM Environment Configuration
# ===========================================

# Server Configuration
PORT=3000
NODE_ENV=development  # Use 'production' for deployment

# ===========================================
# Database Configuration
# ===========================================

# For local development (without Docker):
# DATABASE_URL=postgresql://pokellm:pokellm@localhost:5432/pokellm

# For Docker Compose (uses internal network):
# DATABASE_URL=postgresql://pokellm:${POSTGRES_PASSWORD}@postgres:5432/pokellm

# For Coolify/Production (set this in Coolify UI):
DATABASE_URL=postgresql://pokellm:pokellm@localhost:5432/pokellm

# PostgreSQL password (change in production!)
POSTGRES_PASSWORD=pokellm

# ===========================================
# LLM API Keys
# At least one is required for battles to work
# ===========================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# OpenAI (GPT-4, etc.)
OPENAI_API_KEY=

# Google (Gemini)
GOOGLE_AI_API_KEY=

# xAI (Grok)
XAI_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=
